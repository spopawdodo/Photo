@model PhotoApplication.Models.Album

@{
    ViewBag.Titlu = "Edit album";
}

<h2>@ViewBag.Titlu</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Album"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(m => m.Id)
    <br />
    @Html.Label("AlbumName", "Album Name")
    <br />
    @Html.Editor("AlbumName", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.AlbumName, "", new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-sm btn-success" type="submit">Modify album</button>
}
