@{
    ViewBag.Title = "Photos";
}
<h2>@ViewBag.Title</h2>
<hr />
@if (TempData.ContainsKey("message"))
{
    <h3 class="alert alert-info" role="alert">@ViewBag.message</h3>
}

    <div>
        <a class="btn btn-sm btn-primary full-width" href="/Photo/New">Add a new photo</a>
    </div>

@foreach (PhotoApplication.Models.Photo photo in ViewBag.Photos)
{
    @Html.Partial("PhotoInfo", photo)
    <div class=" panel panel-group">
        <div class="panel-footer around">
            <a class="btn btn-sm btn-success full-width" href="/Photo/Show/@photo.Id">Show details</a>
        </div>
    </div>
}

<div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="/Photo/Index?page=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li><a href="/Photo/Index?page=@i">@(i)</a></li>
            }
            <li>
                <a href="/Photo/Index?page=@(ViewBag.lastPage)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
